<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Problem 5</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <%- include('../layout/nav') %>
        <div class="container justify-content-center" id="container">
            <br>
            <p class="fw-bold">Dynamic HTML Page</p>
            <table style="padding: 28px 50px" class="table table-striped">
                <tr>
                    <td style="width:150px">Name:</td>
                    <td><input type="text" name="username" id="username"></td>
                </tr>
                <br>
                <tr>
                    <td style="width:150px">
                        Age:
                    </td>
                    <td><input type="text" name="userage" id="userage"></td>
                </tr>
                <tr>
                    <td>Favorite Color</td>
                    <td>
                        <div class="form-group col-md-1">
                            <select id="favorcolor" name="favorcolor" class="form-control">
                                <option value="red" selected>Red</option>
                                <option value="yellow">Yellow</option>
                                <option value="blue">Blue</option>
                                <option value="violet">Violet</option>
                            </select>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <br>
                        <button type="submit" value="submit" style="width: 100%;" onclick="addTasks()">SUBMIT</button>
                    </td>
                </tr>
            </table>

            <br>
            <div class="d-flex justify-content-center">
                <table id="tasksTable">
                    <thead>
                        <tr style="background-color:rgba(201, 196, 196, 0.86)">
                            <th style="width: 150px;">Name</th>
                            <th style="width: 250px;">Age</th>
                            <th style="width: 120px">Favourite color</th>
                            <th style="width: 120px class=fa fa-trash"></th>
                        </tr>

                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

        <script>
            var tasks = [];
            var descs = [];
            var favorcolor = []
            var rowCount = 1;

            function addTasks() {
                var temp = 'style .fa fa-trash';
                tasks.push(document.getElementById("username").value);
                descs.push(document.getElementById("userage").value);
                favorcolor.push(document.getElementById("favorcolor").value);
                var currentColor = document.getElementById("favorcolor").value;
                var table = document.getElementById("tasksTable");
                var row = table.insertRow(rowCount);
                var cell1 = row.insertCell(0);
                var cell2 = row.insertCell(1);
                var cell3 = row.insertCell(2);
                var cell4 = row.insertCell(3);
                cell1.innerHTML = tasks[rowCount - 1];
                cell2.innerHTML = descs[rowCount - 1];
                cell3.innerHTML = favorcolor[rowCount - 1];
                cell4.innerHTML = '<td class="fa fa-trash"></td>';
                rowCount++;

                var conDiv = document.getElementsByClassName("container")[0];
                conDiv.style.backgroundColor = `${currentColor}`;
                console.log('Color')
                console.log(currentColor);
            }
        </script>
</body>

</html>